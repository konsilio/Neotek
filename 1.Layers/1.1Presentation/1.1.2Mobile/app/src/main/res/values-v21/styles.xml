<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SagasTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorBackgroundSistemaLogin</item>
        <item name="android:navigationBarColor">@color/colorBackgroundNavigationBar</item>
        <item name="android:statusBarColor">@color/colorBackgroundStatusBar</item>
        <item name="android:colorForeground">@color/textColorSistemaLogin</item>
        <item name="colorAccent">@color/primaryTextColor</item>
        <item name="colorPrimary">@color/colorBackgroundNavigationBar</item>
    </style>
    <style name="AppEnter" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:navigationBarColor">@color/colorBackgroundNavigationBar</item>
        <item name="android:statusBarColor">@color/colorBackgroundStatusBar</item>
        <item name="android:colorForeground">@color/textColorSistemaLogin</item>
        <item name="colorAccent">@color/primaryTextColor</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>
    <style name="SagasTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal" >@color/colorBackgroundSistemaLogin</item>
        <item name="android:textColor">@color/textcolorButton</item>
        <item name="android:colorControlHighlight">@color/buttonBackgroundColorHighlight</item>
    </style>
    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/colorBackgroundNavigationBar</item>
        <item name="android:navigationBarColor">@color/colorBackgroundNavigationBar</item>
    </style>
    <style name="ActionBarTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/textcolorButton</item>
    </style>
    <style name="TooltipError" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_backgroundColor">@android:color/holo_orange_light</item>
    </style>
    <style name="TooltipGood" parent="ToolTipLayoutDefaultStyle">
        <item name="ttlm_backgroundColor">@android:color/holo_green_light</item>
    </style>
    <declare-styleable name="TooltipLayout">
        <attr name="ttlm_padding" format="dimension" />
        <attr name="ttlm_strokeColor" format="color" />
        <attr name="ttlm_backgroundColor" format="color" />
        <attr name="ttlm_strokeWeight" format="dimension" />
        <attr name="ttlm_cornerRadius" format="dimension" />
        <attr name="ttlm_arrowRatio" format="float" />
        <attr name="android:textAppearance" />
        <attr name="ttlm_overlayStyle" format="reference" />
        <attr name="ttlm_elevation" format="dimension" />

        <!-- font file path inside your assets folder -->
        <attr name="ttlm_font" format="string" />

        <!-- textview text gravity -->
        <attr name="android:gravity" />
    </declare-styleable>
    <declare-styleable name="TooltipOverlay">
        <attr name="android:color" />
        <attr name="android:alpha" />
        <attr name="ttlm_repeatCount" format="integer" />
        <attr name="ttlm_duration" format="integer" />
        <attr name="android:layout_margin" />
    </declare-styleable>
</resources>