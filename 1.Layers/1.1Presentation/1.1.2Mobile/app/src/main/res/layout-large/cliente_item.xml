<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/CVEstacionesCarburacionItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        app:cardElevation="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardUseCompatPadding="true"
        android:focusable="true">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp">

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:paddingStart="15dp"
                android:paddingEnd="22dp"
                android:text="@string/cel"
                android:textAlignment="center"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_row="0" />

            <TextView
                android:id="@+id/TVBuscarClienteActivityTelefono"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_columnSpan="3"
                app:layout_gravity="fill"
                app:layout_row="0"
                app:layout_rowSpan="1" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/nom"
                android:textAlignment="center"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_row="1" />

            <TextView
                android:id="@+id/TVBuscarClienteActivityNombre"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_columnSpan="3"
                app:layout_gravity="fill"
                app:layout_row="1" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:paddingStart="15dp"
                android:paddingEnd="23dp"
                android:text="@string/rfc"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_row="2" />

            <TextView
                android:id="@+id/TVBuscarClienteaCTIVITYrFC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text=""
                android:textSize="24sp"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_row="2" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="@string/factura"
                android:textSize="24sp"
                app:layout_column="2"
                app:layout_gravity="fill"
                app:layout_row="2" />

            <TextView
                android:id="@+id/TvBuscarClienteActivityFactura"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:textSize="24sp"
                app:layout_column="3"
                app:layout_gravity="fill"
                app:layout_row="2" />
        </android.support.v7.widget.GridLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
