<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LecturaAlmacenActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TVLecturaAlmacenActivityTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15sp"
                android:paddingTop="25dp"
                android:paddingBottom="15dp"
                android:text="@string/toma_de_lectura_inicial"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/TVLecturaAlmacenActivityTipoAlmacen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25sp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="25sp"
                android:text="@string/selecciona_almacen_principal"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/SLecturaAlmacenActivityListaAlmacen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:minHeight="50sp"
                android:padding="20dp" />

            <TextView
                android:id="@+id/TVLecturaAlmacenActivityTipoMedidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15sp"
                android:text="@string/selecciona_el_tipo_de_medidor_porcentual"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/SLecturaAlmacenActivityListaMedidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:minHeight="50sp"
                android:padding="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <Button
                android:id="@+id/BtnLecturaAlamacenActivityGuardar"
                style="@style/SagasTheme.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="85dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/ripple_effect"
                android:padding="20sp"
                android:text="@string/message_acept"
                android:textColor="@color/colorTextButtonLogin"
                android:textSize="30sp"
                tools:ignore="UnusedAttribute" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>