<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTituloPorcentaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/title_medidor_almacen"
        android:textColor="@color/colorTextLogin"
        android:textSize="20dp"
        android:textStyle="italic"
        tools:ignore="SpUsage" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/porcentaje_medidor"
        android:textColor="@color/colorTextLogin"
        android:textSize="45dp"
        android:textStyle="bold"
        tools:ignore="SpUsage" />
    <TextView
        android:id="@+id/textViewCapturaText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/porcentaje_medidor_almacen_message"
        android:textColor="@color/colorTextLogin"
        android:textSize="20dp"
        tools:ignore="SpUsage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="25sp"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/number_picker_porcentaje"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:scaleY="2"
            android:theme="@style/NumberPickerText">

        </NumberPicker>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_value"
            android:text="@string/punto"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:ignore="SpUsage" />

        <NumberPicker
            android:id="@+id/number_picker_decimal"
            android:layout_width="60dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:scaleY="2"
            android:theme="@style/NumberPickerText">

        </NumberPicker>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/padding_value"
            android:text="@string/porcentaje"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:id="@+id/TVCapturaPorcentajeActivityTotalGas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp" />



    <Button
        android:id="@+id/aceptar_button"
        style="@style/SagasTheme.Button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="15sp"
        android:background="@drawable/ripple_effect"
        android:text="@string/message_acept"
        android:textColor="@color/colorTextButtonLogin"
        android:textSize="25dp"
        tools:ignore="SpUsage" />
<!--        android:background="@color/colorButtonLogin"-->

</LinearLayout>