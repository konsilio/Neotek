<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LecturaDatosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TVLecturaDatosactivityTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15sp"
                android:paddingTop="25dp"
                android:paddingBottom="15dp"
                android:text="@string/toma_de_lectura_inicial"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/TVLecturaDatosEstacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15sp"
                android:text="@string/seleciona_la_estaci_n_de_carburaci_n"
                android:textAlignment="viewStart"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/SLecturaDatosActivityListaCarburacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:minHeight="50sp"
                android:padding="20dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="126dp" />

            <TextView
                android:id="@+id/TVLecturaDatosActivityTipoMedidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15sp"
                android:text="@string/selecciona_el_tipo_de_medidor_porcentual"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/SLecturaDatosActivityTipoMedidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10sp"
                android:minHeight="50sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <Button
                android:id="@+id/BLecturaDatosActivityAceptar"
                style="@style/SagasTheme.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="85dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/ripple_effect"
                android:padding="20sp"
                android:text="@string/message_acept"
                android:textColor="@color/colorTextButtonLogin"
                android:textSize="36sp"
                tools:ignore="ObsoleteLayoutParam,UnusedAttribute" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>