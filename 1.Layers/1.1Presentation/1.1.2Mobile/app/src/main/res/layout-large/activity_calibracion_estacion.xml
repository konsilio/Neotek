<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CalibracionEstacionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TVCalibracionEstacionActivityTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15sp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/Calibracion"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/TVCalibracionEstacionEstacionACalibrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15sp"
                android:paddingTop="15dp"
                android:paddingBottom="5dp"
                android:text="@string/seleccione_la_estacion_de_carburacion_a_calibrar"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/SCalibracionEstacionActivityListaEstaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="15dp"
                android:minHeight="50sp"
                android:padding="20dp" />

            <TextView
                android:id="@+id/TVCalibracionEstacionActivityMedidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="5dp"
                android:text="@string/selecciona_el_tipo_de_medidor_porcentual"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/SCalibracionEstacionActivityListaMedidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="15dp"
                android:minHeight="50sp"
                android:padding="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15sp" />

            <Button
                android:id="@+id/BtnCalibracionEstacionAceptar"
                style="@style/SagasTheme.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginRight="85dp"
                android:background="@drawable/ripple_effect"
                android:padding="20sp"
                android:text="@string/message_acept"
                android:textColor="@color/colorTextButtonLogin"
                android:textSize="30sp"
                tools:ignore="UnusedAttribute" />
            <!--                android:backgroundTint="@color/colorButtonLogin"-->
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>