<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/CVEstacionesCarburacionItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <android.support.v7.widget.GridLayout
            android:id="@+id/Grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/PuntoVentaGasListaActivityCantidadExistencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2sp"
                android:layout_marginLeft="2sp"
                android:layout_marginBottom="5sp"
                android:padding="2sp"
                android:textSize="18sp"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_row="2" />

            <TextView
                android:id="@+id/PuntoVentaGasListActivityExistencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:text="@string/existencia"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_row="2"
                android:layout_marginStart="5sp" />


            <EditText
                android:id="@+id/ETPuntoVentaGasListActivityPrecioporLitro"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:inputType="numberDecimal"
                android:textColor="@color/colorTextLogin"
                android:textSize="18sp"
                app:layout_column="2"
                app:layout_gravity="fill"
                app:layout_row="3"
                tools:ignore="Autofill,LabelFor"
                tools:targetApi="P"
                />

            <TextView
                android:id="@+id/PuntoVentaGasListActivityTituloPrecioporLitro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio Unitario"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_column="2"
                app:layout_gravity="fill"
                app:layout_row="3"
                android:layout_marginBottom="20dp"
                />



            <EditText
                android:id="@+id/ETPuntoVentaGasListActivityCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="@color/colorTextLogin"
                android:textSize="18sp"
                app:layout_column="2"
                app:layout_gravity="fill"
                app:layout_row="2"
                tools:ignore="Autofill,LabelFor"
                tools:targetApi="P" />



            <TextView
                android:id="@+id/PuntoVentaGasListActivityTituloCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cantidad_venta"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_column="2"
                app:layout_gravity="fill"
                app:layout_row="1" />

            <TextView
                android:id="@+id/PuntoVentaGasListaActivityTipoGas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill"
                app:layout_row="1" />
        </android.support.v7.widget.GridLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
