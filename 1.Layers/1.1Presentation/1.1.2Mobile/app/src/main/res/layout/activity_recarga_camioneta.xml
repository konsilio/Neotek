<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.RecargaCamionetaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TVRecargaCamionetaActivityTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:text="@string/Recarga_de_gas"
                android:textAlignment="center"
                android:textColor="@color/colorTextLogin"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/TVRecargaCamionetaActivityTituloCamionetas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="10sp"
                android:text="@string/Selecciona_la_camioneta"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/SRecargaCamionetaActivityListaCamionetas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:padding="25dp" />

            <TextView
                android:id="@+id/TVRecargaCamionetaActivityTituloGasSalida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="@string/selecciona_el_almacen"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/SRecargaCamionetaActivityEstacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:padding="25dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="85sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <Button
                android:id="@+id/BRecargaCamionetaActivityGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="35dp"
                style="@style/SagasTheme.Button"
                android:background="@drawable/ripple_effect"
                android:text="@string/message_acept"
                android:textColor="@color/colorTextButtonLogin"
                android:textSize="18sp"
                tools:ignore="UnusedAttribute" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>