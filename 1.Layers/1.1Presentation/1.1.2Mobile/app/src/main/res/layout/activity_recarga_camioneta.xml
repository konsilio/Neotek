<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.RecargaCamionetaActivity">

    <TextView
        android:id="@+id/TVRecargaCamionetaActivityTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="15dp"
        android:paddingTop="25dp"
        android:text="@string/Recarga_de_gas"
        android:textAlignment="center"
        android:textColor="@color/colorTextLogin"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/TVRecargaCamionetaActivityTituloCamionetas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="25dp"
        android:text="@string/Selecciona_la_camioneta"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/SRecargaCamionetaActivityListaCamionetas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="25dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="85sp" />

    <Button
        android:id="@+id/BRecargaCamionetaActivityGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="85dp"
        android:text="@string/message_acept"
        android:textColor="@color/colorTextButtonLogin"
        android:backgroundTint="@color/colorButtonLogin"
        android:textSize="30sp"
        tools:ignore="UnusedAttribute" />

</LinearLayout>