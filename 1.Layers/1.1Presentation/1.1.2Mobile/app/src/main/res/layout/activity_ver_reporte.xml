<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Activity.VerReporteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize,WebViewLayout">

            <WebView
                android:id="@+id/WVVerReporteActivityReporte"
                android:layout_width="match_parent"
                android:layout_height="650sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

            </WebView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/BtnVerReporteActivityTerminar"
                    style="@style/SagasTheme.Button"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="2sp"
                    android:layout_marginBottom="5sp"
                    android:layout_weight="2"
                    android:background="@drawable/ripple_effect"
                    android:backgroundTint="@color/colorButtonLogin"
                    android:drawableStart="@drawable/ic_go_back_dark"
                    android:padding="2sp"
                    android:text="@string/terminar"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:ignore="ButtonStyle,UnusedAttribute" />

                <Button
                    android:id="@+id/BtnReporteActivityImprimir"
                    style="@style/SagasTheme.Button"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="2sp"
                    android:layout_marginBottom="5sp"
                    android:layout_weight="2"
                    android:background="@drawable/ripple_effect"
                    android:text="@string/imprimir_reporte"
                    android:textColor="@color/colorTextButtonLogin"
                    android:textSize="14sp"
                    tools:ignore="ButtonStyle,UnusedAttribute" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>