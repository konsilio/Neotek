<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NumberPickerText" >
        <item name="android:textSize" tools:ignore="SpUsage">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TabelViewText" >
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

<style name="SagasTheme" parent="Theme.AppCompat.Light.NoActionBar"  >
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <!--<item name="android:windowBackground">@color/colorBackgroundSistemaLogin</item>-->
        <item name="android:colorForeground">@color/textColorSistemaLogin</item>
        <item name="colorAccent">@color/primaryTextColor</item>
        <item name="colorPrimary">@color/colorBackgroundNavigationBar</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorBackgroundNavigationBar</item>
    </style>

    <style name="AppEnter" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorForeground">@color/textColorSistemaLogin</item>
        <item name="colorAccent">@color/primaryTextColor</item>
        <item name="colorPrimaryDark">@color/buttonBackgroundColor</item>
    </style>
    <style name="SagasTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal" tools:ignore="NewApi">@color/colorBackgroundSistemaLogin</item>
        <item name="android:textColor">@color/textcolorButton</item>
        <item name="colorControlHighlight">@color/buttonBackgroundColorHighlight</item>
    </style>
    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/colorBackgroundNavigationBar</item>
    </style>
    <style name="ActionBarTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/textcolorButton</item>
    </style>
    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="colorAccent">@color/primaryTextColor</item>
    </style>
</resources>
