@model List<MVC.Presentacion.Models.Cobranza.AbonosModel>

@Html.DevExpress().GridView(
    settings =>
    {
        settings.Name = "CreditoRecuperado";
        settings.KeyFieldName = "IdAbono";
        settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
        settings.CallbackRouteValues = new { Controller = "Cobranza", Action = "MasterDetailMasterPartial" };
        settings.SettingsEditing.Mode = GridViewEditingMode.EditFormAndDisplayRow;
        settings.CommandColumn.Visible = true;
        settings.CommandColumn.ShowNewButton = false;
        settings.CommandColumn.ShowDeleteButton = false;
        settings.CommandColumn.ShowEditButton = false;
        settings.Settings.ShowFilterRow = true;
        settings.Settings.ShowGroupPanel = true;
        settings.Settings.ShowFooter = true;
        settings.Theme = "Material";
        settings.Columns.Add("URLPdf").Visible = false;
        settings.Columns.Add("URLXml").Visible = false;
        settings.Columns.Add(c =>
        {
            c.FieldName = "Cliente";
            c.Caption = "Cliente";
            c.Settings.AllowSort = DefaultBoolean.False;
            c.EditFormSettings.Visible = DefaultBoolean.False;
            c.GroupIndex = 1;
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "FechaRegistro";
            c.Caption = "Fecha de Venta";
            c.Settings.AllowSort = DefaultBoolean.False;
            c.EditFormSettings.Visible = DefaultBoolean.False;
            c.PropertiesEdit.DisplayFormatString = "d";
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "ticket";
            c.Caption = "Ticket";
            c.Settings.AllowSort = DefaultBoolean.False;
            c.EditFormSettings.Visible = DefaultBoolean.False;
            c.GroupIndex = 2;
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "MontoAbono";
            c.Caption = "Importe";
            c.Settings.AllowSort = DefaultBoolean.False;
            c.EditFormSettings.Visible = DefaultBoolean.False;
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "FormaPago";
            c.Caption = "Forma Pago";
            c.Settings.AllowSort = DefaultBoolean.False;
            c.EditFormSettings.Visible = DefaultBoolean.False;
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "FechaAbono";
            c.Caption = "Fecha Abono";
            c.Settings.AllowSort = DefaultBoolean.False;
            c.EditFormSettings.Visible = DefaultBoolean.False;
            c.PropertiesEdit.DisplayFormatString = "d";
        });

        settings.CustomUnboundColumnData = (sender, e) =>
        {
            if (e.Column.FieldName == "MontoAbono")
            {
                e.Value = (decimal)e.GetListSourceFieldValue("MontoAbono");
            }
        };
        settings.TotalSummary.Add(DevExpress.Data.SummaryItemType.Sum, "MontoAbono").DisplayFormat = "c";
        settings.GroupSummary.Add(DevExpress.Data.SummaryItemType.Sum, "MontoAbono").DisplayFormat = "c";
        settings.Columns.Add(c =>
        {
            c.Caption = "Acción";
            c.Width = System.Web.UI.WebControls.Unit.Percentage(15);

            c.SetDataItemTemplateContent(d =>
            {

                ViewContext.Writer.Write(string.Format("<a href='" + Url.Action("FacturarAbono", "Cobranza", new { id = d.Grid.GetRowValues(d.VisibleIndex, "IdAbono")
                }) + "' class='tip' role='button' aria-haspopup='true' aria-expanded='false'><i class='material-icons'>local_atm</i></a>"));
                ViewContext.Writer.Write(string.Format("<a href='" + d.Grid.GetRowValues(d.VisibleIndex, "URLPdf") + "' class='tip' target='_blank' role='button' aria-haspopup='true' aria-expanded='false'><i class='material-icons'>picture_as_pdf</i></a>"));
                ViewContext.Writer.Write(string.Format("<a href='" + d.Grid.GetRowValues(d.VisibleIndex, "URLXml") + "' class='tip' target='_blank' role='button' aria-haspopup='true' aria-expanded='false'><i class='material-icons'>file_download</i></a>"));
            });
        });
    }
).Bind(Model).GetHtml()