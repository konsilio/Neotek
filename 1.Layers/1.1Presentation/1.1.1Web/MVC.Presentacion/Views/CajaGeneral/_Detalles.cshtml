        //});
        //settings.Columns.Add(c =>
        //{
        //    c.FieldName = "Orden";
        //    c.Visible = true;
        //});
        settings.Columns.Add(c =>
        {
            c.FieldName = "OrdenDetalle";
            c.Caption = "Id";
            c.Settings.AllowSort = DefaultBoolean.False;
            c.EditFormSettings.Visible = DefaultBoolean.False;
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "ProductoDescripcion";
            c.Caption = "Descripcion";
            c.Settings.AllowSort = DefaultBoolean.False;
            c.EditFormSettings.Visible = DefaultBoolean.False;
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "CantidadProducto";
            c.Caption = "Cantidad";
            c.Visible = true;
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "PrecioUnitarioProducto";
            c.Caption = "Precio Unitario";
            c.Visible = true;
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "CantidadKg";
            c.Caption = "Total Kilos";
            c.Settings.AllowSort = DefaultBoolean.False;
            c.EditFormSettings.Visible = DefaultBoolean.False;
        });
        settings.Columns.Add(c =>
        {
            c.FieldName = "CantidadLt";
            c.Caption = "Total Litros";
            c.Settings.AllowSort = DefaultBoolean.False;
            c.EditFormSettings.Visible = DefaultBoolean.False;
        });
        settings.CellEditorInitialize = (s, e) =>
        {
            ASPxEdit editor = (ASPxEdit)e.Editor;
            editor.ValidationSettings.Display = Display.None;
        };
        settings.ClientSideEvents.BeginCallback = "OnBeginGridCallback";
    });
}
@grid.Bind(Model).GetHtml()
