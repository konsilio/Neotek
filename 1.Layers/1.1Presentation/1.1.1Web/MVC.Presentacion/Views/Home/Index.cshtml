@using MVC.Presentacion.Models.Seguridad
@model  LoginModel

@{
    ViewBag.Title = "Iniciar sesión";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link rel="icon" href="favicon.ico" type="image/x-icon">

    <link rel="stylesheet" href="~/assets/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/plugins/bootstrap-select/css/bootstrap-select.min.css" />
    <!-- Custom Css -->
    <link rel="stylesheet" href="~/assets/css/main.css">
    <link rel="stylesheet" href="~/assets/css/color_skins.css">
</head>

<body class="theme-black">
    <div class="authentication">
        @using (Html.BeginForm("Inicio", "Home", FormMethod.Post))
        {
            <div class="container">
                <div class="col-md-12 content-center">
                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            <div class="company_detail">
                                <h4 class="logo">
                                    <img src="assets/images/LogoCorpKonsilio183x183.png" alt="" />
                                    Corporativo Konsilio
                                </h4>
                                <h3>SAGAS. Sistema de Administración de Gas <strong style="text-transform: lowercase;">Ver. 1.0</strong></h3>
                                <p>
                                </p>
                                <div class="footer">
                                    <hr>
                                    <ul>
                                        <li>
                                            <div class="demo-google-material-icon">
                                                <a href="http://sagasapi.ddns.net:7013/SAGAS_APK/app-sagas-release.apk">
                                                    <i class="material-icons">android</i> <span class="icon-name">(App móvil)</span>
                                                </a>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="demo-google-material-icon">
                                                <a href="@Url.Action("Index", "Facturacion")">
                                                    <i class="material-icons">monetization_on</i> 
                                                    <span class="icon-name">Facturación</span>                                                   
                                                </a>
                                            </div>
                                        </li>
                                    </ul>
                                    <ul>                                        
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-5 col-md-12 offset-lg-1">
                            <div class="card-plain">
                                <div class="header">
                                    <h5>Inicio de Sesión</h5>
                                </div>
                                <div class="from">
                                    <div class="form-group">
                                        <select name="IdEmpresa" id="empresas" class="form-control selectpicker" data-live-search="true">
                                            @foreach (var lst in Model.Empresas)
                                            {
                                                <option value="@lst.IdEmpresa">@lst.NombreComercial</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Usuario" name="Usuario" />
                                        <span class="input-group-addon"><i class="zmdi zmdi-account-circle"></i></span>
                                    </div>
                                    <div class="input-group">
                                        <input type="password" class="form-control" placeholder="Contraseña" name="Password" />
                                        <span class="input-group-addon"><i class="zmdi zmdi-lock"></i></span>
                                    </div>

                                </div>
                                <div class="footer">
                                    <input type="submit" value="Iniciar" class="btn btn-primary btn-round btn-block" />
                                </div>
                                @if (Model.Respuesta != null)
                                {
                                    if (!Model.Respuesta.Exito)
                                    {
                                        <div class="alert alert-danger" id="divMensaje">
                                            <label id="lblMensajeError">@Model.Respuesta.Mensaje.ToString() </label>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
<script src="~/assets/plugins/jquery/jquery-v3.2.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"></script>
<script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
<script src="~/assets/plugins/bootstrap-select/js/bootstrap-select.min.js"></script>

