<body>
    <section class="content home">
        <div class="container-fluid">
            @using (Html.BeginForm("Crear", "Historico", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <div class="block-header">
                    <div class="row clearfix">
                        <div class="col-lg-5 col-md-5 col-sm-12">
                            <h2>Histórico de ventas</h2>
                            <ul class="breadcrumb padding-0">
                                <li class="breadcrumb-item"><a href="~/DashBoard/Vista/Dashboard.aspx"><i class="zmdi zmdi-home"></i></a></li>
                                <li class="breadcrumb-item">Equipo de Transporte</li>
                                <li class="breadcrumb-item">Histórico de ventas</li>
                            </ul>
                        </div>
                    </div>
                    <div class="card">
                        <div class="header">
                            <strong>Mantenimiento</strong>
                        </div>
                        <div class="body">
                            <div class="row clearfix">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <b>Archivo a Cargar:</b>
                                        @Html.TextBoxFor(m => m.Url, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Url, "", new { @class = "alert-danger" })
                                    </div>
                                </div>

                                <div class="col-md-2">
                                    <div class="form-group">

                                        @*<label class="btn btn-default btn btn-primary btn-round">
                                                Seleccionar Ruta <input type="file" id="idUrl" >
                                            </label>*@
                                        <input type="file" id="dataFile" name="upload" />
                                        <input type="submit" value="Upload" class="btn btn-primary btn-round" />

                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <input type="file" id="dataFile" name="preCarga" />
                                        <input type="submit" value="Pre-Cargar" formaction=@Url.Action("PreCarga") class="btn btn-primary btn-round" />
                                    </div>
                                </div>


                            </div>

                            @if (ViewBag.MensajeError != null)
                            {
                                <div id="DivAlerta" class="container">
                                    <div class="alert alert-danger">
                                        <div class="alert-icon">
                                            <i class="zmdi zmdi-block"></i>
                                        </div>
                                        <strong>
                                            @ViewBag.MensajeError
                                        </strong>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="card">
                        <div class="header">
                            Validacion de <strong>Informacion</strong>
                        </div>
                        <div class="body">

                            <div class="row clearfix blockquote blockquote-info btn-round">
                                <div class="table-responsive">
                                    <table class="table table-striped  filterable">
                                        <thead>
                                            <tr>
                                                <td><strong></strong></td>
                                                <td><strong>Mes</strong></td>
                                                <td><strong>Año</strong></td>
                                                <td><strong>Monto Venta</strong></td>
                                                <td><strong>Pipa</strong></td>
                                                <td><strong>Camioneta</strong></td>
                                                <td><strong>Local</strong></td>
                                                <td><strong>Foranea</strong></td>
                                            </tr>
                                        </thead>
                                        @if (ViewBag.HistoricoVentas != null)
                                        {

                                            <tbody>

                                                @foreach (var hist in ViewBag.HistoricoVentas)
                                                {
                                                    <tr>
                                                        <td></td>
                                                        <td>@hist.Mes</td>
                                                        <td>@hist.Anio</td>
                                                        <td>$@hist.MontoVenta</td>
                                                        @if (@hist.EsPipa)
                                                        {
                                                            <td>1</td>
                                                        }
                                                        else
                                                        {
                                                            <td>0</td>
                                                        }
                                                        @if (@hist.EsCamioneta)
                                                        {
                                                            <td>1</td>
                                                        }
                                                        else
                                                        {
                                                            <td>0</td>
                                                        }
                                                        @if (@hist.EsLocal)
                                                        {
                                                            <td>1</td>
                                                            <td>0</td>
                                                        }
                                                        else
                                                        {
                                                            <td>0</td>
                                                            <td>1</td>
                                                        }
                                                    </tr>
                                                }


                                            </tbody>
                                        }

                                    </table>
                                </div>
                            </div>
                            @*@if (ViewBag.HistoricoVentas != null)
                            {
                                <div class="row clearfix">
                                    <div class="col-md-6">
                                        Página @(ViewBag.HistoricoVentas.PageCount < ViewBag.HistoricoVentas.PageNumber ? 0 : ViewBag.HistoricoVentas.PageNumber) de @ViewBag.HistoricoVentas.PageCount
                                    </div>
                                    <div class="col-md-6 text-right">
                                        @Html.PagedListPager((IPagedList)ViewBag.HistoricoVentas, page => Url.Action("Index", new { page, @class = "btn btn-primary btn-simple" }))
                                    </div>
                                </div>
                            }*@

                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</body>