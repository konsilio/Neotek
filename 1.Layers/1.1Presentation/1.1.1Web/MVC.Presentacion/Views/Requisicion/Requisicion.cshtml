@using MVC.Presentacion.Models.Requisicion
@model RequisicionModel

@{
    string EnabledAdminCentral = Convert.ToBoolean(ViewBag.EsAdminCentral).Equals(false) ? "disabled" : "";
    string EnabledEsNueva = Convert.ToBoolean(ViewBag.EsNueva).Equals(true) ? "" : "disabled";
    string txtbutton = ViewBag.BtnCrear == null ? "Crear" : ViewBag.BtnCrear;
    int index = 0;
}

<link rel="stylesheet" href="~/assets/plugins/bootstrap-colorpicker/css/bootstrap-colorpicker.css" />
<link href="~/assets/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
<div class="page-loader-wrapper">
    <div class="loader">
        <div class="m-t-30"><img src="~/assets/images/LogoCorpKonsilio183x183.png" width="50" height="50" alt="Alpino"></div>
        <p>Procesando</p>
    </div>
</div>
<script type="text/javascript">
    function mostrarUnidad() {
        var idProd = document.getElementById("IdProducto").value;
        var ArrProd = [{}];
        var unidad = "";

        @if (Model.Productos != null) {
            foreach (var p in Model.Productos) {
            @:ArrProd.push({ id: "@p.IdProducto", unidad: "@p.UnidadMedida" });
            }
        }
        for (var i = 0; i < ArrProd.length; i += 1) {
            if (ArrProd[i].id == idProd) {
                unidad = ArrProd[i].unidad;
            }
        }
        document.getElementById("unidadPord").innerHTML = unidad;
    }

    function filtrarProd() {
        var keyword = document.getElementById("selectTipo").value;
        var select = document.getElementById("IdProducto");
        var cantidad = document.getElementById("Cantidad");
        var ArrProd = [{}];

        @if (Model.Productos != null) {
            foreach (var p in Model.Productos) {
            @:ArrProd.push({ IdProducto: "@p.IdProducto", Descripcion: "@p.Descripcion", IdTipoServicio: "@p.IdProductoServicioTipo" });
            }
        }

        for (var p = 0; p < ArrProd.length; p++) {
            for (var i = 0; i < select.length; i++) {
                var val = select.options[i].value;
                if (val == ArrProd[p].IdProducto) {
                    if (ArrProd[p].IdTipoServicio !== keyword) {
                        select.options[i].style.display = 'none';
                    }
                    else {
                        select.options[i].style.display = 'list-item';
                    }
                    if (keyword == 3) {
                        cantidad.disabled = true;
                    }
                }
            }
        }
    }
</script>
<body onload='filtrarProd()'>
    @using (Html.BeginForm("CrearRequisicion", "Requisicion", FormMethod.Post))
    {
