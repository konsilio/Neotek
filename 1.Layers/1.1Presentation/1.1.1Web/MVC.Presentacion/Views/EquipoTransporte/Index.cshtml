@model  MVC.Presentacion.Models.Catalogos.EquipoTransporteDTO
<!DOCTYPE html>

<html>
<head>
    <script src="~/assets/plugins/bootstrap-notify/bootstrap-notify.js"></script>
    <script src="~/assets/js/pages/ui/notifications.js"></script>
    <script type="text/javascript">

        var mensaje = '@ViewBag.Msj';
        var tipo = '@ViewBag.Tipo';
        if (mensaje != '') {
            $(window).on("load", showNotification(tipo, mensaje, 'top', 'center', '', ''));
        }
   function AsignarEliminar(idEquipo) {
       $("#btnEliminar").attr("data-id", idEquipo);
    }
    $(function () {
        $("#btnEliminar").click(function () {
            var idEquipo = $("#btnEliminar").attr("data-id")
            window.location = window.location.protocol + "//" + window.location.host + "/EquipoTransporte/BorrarVehiculo/" + idEquipo;
        });
    });
    </script>
</head>
<body>
    @using (Html.BeginForm("Nuevo", "EquipoTransporte", FormMethod.Post))
    {
        <section class="content home">
            <div class="container-fluid">
                <div class="block-header">
                    <div class="row clearfix">
                        <div class="col-lg-5 col-md-5 col-sm-12">
                            <h2>Equipo de Transporte</h2>
                            <ul class="breadcrumb padding-0">
                                <li class="breadcrumb-item"><a href="@Url.Action("Inicio", "Home")"><i class="zmdi zmdi-home"></i></a></li>
                                <li class="breadcrumb-item">Equipo de Transporte</li>
                                <li class="breadcrumb-item">Catálogo Parque Vehícular</li>
                            </ul>
                        </div>
                    </div>
                    <div class="card">
                        <div class="header">
                        </div>
                        <div class="body">
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="row clearfix">
                                        <div class="col-sm-3">
                                            <b>Número de Placas:</b>
                                            @Html.TextBoxFor(m => m.NumeroPlacas, new { @class = "form-control", placeholder = "Número de Placas" })
                                        </div>
                                        <div class="col-sm-3">
                                            <b>Palabra Clave:</b>
                                            @Html.TextBoxFor(m => m.AliasUnidad, new { @class = "form-control", placeholder = "Palabra Clave" })
                                        </div>
                                        <div class="col-sm-3">
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <input type="submit" name="Buscar" value="Buscar" formaction=@Url.Action("Buscar") formmethod="post" class="btn btn-raised btn-primary btn-round float-left" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="header">
                            <h2>Información <strong>Vehícular</strong></h2>
                        </div>
                        <div class="body">
                            <div class="row clearfix">
                                <div class="col-lg-1 col-md-1 col-sm-1">
                                    <div class="form-group">
                                        <div>
                                            <label for="txtNume">
                                                Número de Identificación:*
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-3">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.NumeroIdentificacion, new { @class = "form-control", @placeholder = "Número de Identificación" })
                                        @Html.ValidationMessageFor(m => m.NumeroIdentificacion, "", new { @class = "alert-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-1 col-md-1 col-sm-1">
                                    <div class="form-group">
                                        <div>
                                            <label for="txtNume">
                                                Número de Placas:*
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-3">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.NumeroPlacas, new { @class = "form-control", @placeholder = "Número de Placas" })
                                        @Html.ValidationMessageFor(m => m.NumeroPlacas, "", new { @class = "alert-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-1 col-md-1 col-sm-1">
                                    <div class="form-group">
                                        <div>
                                            <label for="txtNume">
                                                Vehículo:*
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-3">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Vehiculo, new { @class = "form-control", @placeholder = "Vehículo" })
                                        @Html.ValidationMessageFor(m => m.NumeroPlacas, "", new { @class = "alert-danger" })
                                    </div>
                                </div>
                                <br />
                                @if (ViewBag.MensajeError != null)
                            {
                                <div class="row clearfix">
                                    <div id="divMensajeError" class="container">
                                        <div class="alert alert-danger">
                                            <div class="alert-icon">
                                                <i class="zmdi zmdi-block"></i>
                                            </div>
                                            <strong>
                                                <label>@ViewBag.MensajeError</label>
                                            </strong>
                                        </div>
                                    </div>
                                </div>
                            }
                                <div class="row clearfix">
                                    <div class="col-lg-12 col-md-12 col-sm-12 blockquote blockquote-info btn-round">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover" name="EmpresasGaseras">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Número de Placa</th>
                                                        <th>Vehículo</th>
                                                        <th>Alias</th>
                                                        <th>Acción</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (ViewBag.Vehiculos != null)
                                                {
                                                    foreach (var item in ViewBag.Vehiculos)
                                                    {
                                                <tr>
                                                    <th>@item.IdEquipoTransporte</th>
                                                    <th>@item.NumeroPlacas</th>
                                                    <td>@item.Vehiculo</td>
                                                    <td>@item.AliasUnidad</td>
                                                    <td>
                                                        <a ID="lbEdit" href="@Url.Action("EditarVehiculo", "EquipoTransporte", new { id = item.IdEquipoTransporte })" class="tip" role="button" aria-haspopup="true" aria-expanded="false">
                                                            <i class="material-icons">edit</i>
                                                            <span>Editar vehículo</span>
                                                        </a>
                                                        @if (ViewBag.EsAdmin)
                                                                {
                                                                <a href="#ModalConfirmacion" data-toggle="modal" data-id="@item.IdEquipoTransporte" id="btnok" class="tip" onclick="javascript: AsignarEliminar(@item.IdEquipoTransporte)" data-target="#ModalConfirmacion" role="button" aria-haspopup="true" aria-expanded="false">
                                                                    <i class="material-icons">delete</i>
                                                                    <span>Eliminar vehículo</span>
                                                                </a>
                                                                }
                                                    </td>
                                                </tr>
                                                    }
                                                }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row clearfix">
                                <div class="col-lg-7 col-md-7 col-sm-7">
                                    <div class="form-group">
                                        @if (ViewBag.EsEdicion == false || ViewBag.EsEdicion == null)
                                        {
                                            <button class="btn btn-round btn-primary float-right">
                                                <i class="zmdi zmdi-plus"></i> Agregar
                                            </button>
                                        }
                                        else
                                        {
                                            <button btn formaction="EditarClienteLoc" class="btn btn-primary btn-round float-right">
                                                <i class="zmdi zmdi-swap"></i> Actualizar
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </section>
        <div class="modal fade" id="ModalConfirmacion" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="title" id="ModalConfirmacionLabel">¿Está seguro?</h4>
                    </div>
                    <div class="modal-footer">
                        <input type="button" id="btnEliminar" value="Si" class="btn btn-raised btn-primary btn-round waves-effect" />
                        <button type="button" class="btn btn-danger btn-simple btn-round waves-effect" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>