@model  MVC.Presentacion.Models.Pedidos.PedidoModel

<!DOCTYPE html>

<html>
<head>
    <script src="~/assets/plugins/bootstrap-notify/bootstrap-notify.js"></script>
    <script src="~/assets/js/pages/ui/notifications.js"></script>

    <script type="text/javascript">
    var mensaje = '@ViewBag.Msj';
    if (mensaje != '') {
        $(window).on("load", showNotification('alert-success', mensaje, 'top', 'center', '', ''));
    }
    </script>
</head>
<body style="height:100%">
    @using (Html.BeginForm("Nuevo", "Pedidos", FormMethod.Post))
    {
        <section class="content home">
            <div class="container-fluid">
                <div class="block-header">
                    <div class="row clearfix">
                        <div class="col-lg-5 col-md-5 col-sm-12">
                            <h2>Call Center</h2>
                            <ul class="breadcrumb padding-0">
                                <li class="breadcrumb-item"><a href="@Url.Action("Inicio", "Home")"><i class="zmdi zmdi-home"></i></a></li>
                                <li class="breadcrumb-item">Call Center</li>
                                <li class="breadcrumb-item">Pedidos</li>
                            </ul>
                        </div>
                    </div>
                    <div class="card">
                        <div class="header">
                        </div>
                        <div class="body">
                            <div class="row clearfix">
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <div class="row clearfix">
                                        <div class="col-sm-3">
                                            <div>
                                                <strong>Gasera</strong>
                                            </div>
                                            <div>
                                                @if (ViewBag.EsAdmin)
                                                {
                                                    <select id="empresas" name="IdEmpresa" class="form-control show-tick" data-live-search="true">
                                                        @foreach (var lst in ViewBag.Empresas)
                                                        {
                                                            <option value="@lst.IdEmpresa">@lst.NombreComercial</option>
                                                        }
                                                    </select>
                                                }
                                                else
                                                {
                                                    @ViewBag.Empresas
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <div class="row clearfix">
                                        <div class="col-sm-3">
                                            <b>Teléfono del cliente:</b>
                                            @Html.TextBoxFor(m => m.Telefono1, new { @class = "form-control", placeholder = "Teléfono del cliente" })
                                        </div>
                                        <div class="col-sm-3">
                                            <b>Teléfono del cliente:</b>
                                            @Html.TextBoxFor(m => m.Celular1, new { @class = "form-control", placeholder = "Teléfono del cliente" })
                                        </div>
                                        <div class="col-sm-3">
                                            <b>RFC:</b>
                                            @Html.TextBoxFor(m => m.Rfc, new { @class = "form-control", placeholder = "RFC del cliente" })
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <input type="submit" value="Nuevo" class="btn btn-raised btn-primary btn-round float-right" />
                                                <input type="submit" name="Buscar" value="Buscar" formaction=@Url.Action("Buscar") formmethod="post" class="btn btn-raised btn-primary btn-round float-left" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row clearfix">
                                <div class="col-lg-12 col-md-12 col-sm-12 blockquote blockquote-info btn-round">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover" name="EmpresasGaseras">
                                            <thead>
                                                <tr>
                                                    <th># Pedido</th>
                                                    <th>RFC</th>
                                                    <th>Nombre</th>
                                                    <th>Cantidad</th>
                                                    <th>Estatus</th>
                                                    <th>Acción</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.Pedidos != null)
                                                {
                                                    foreach (var item in Model.Pedidos)
                                                    {
                                                        <tr>
                                                            <th>@item.IdPedido</th>
                                                            <th>@item.Rfc</th>
                                                            <td>@item.NombreRfc</td>
                                                            <td>@item.Cantidad</td>
                                                            <td>@item.EstatusPedido</td>
                                                            <td>
                                                                <a ID="lbEdit" href="@Url.Action("RevisarPedido", "Pedidos", new { idPedido = item.IdPedido })" class="tip" role="button" aria-haspopup="true" aria-expanded="false">
                                                                    <i class="material-icons">edit</i>
                                                                    <span>Revisar pedido</span>
                                                                </a>
                                                                <a ID="lbBorrar" href="@Url.Action("CancelarPedido", "Pedidos", new {  idPedido =item.IdPedido })" class="tip" role="button" aria-haspopup="true" aria-expanded="false">
                                                                    <i class="material-icons">delete</i>
                                                                    <span>Cancelar pedido</span>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @if (ViewBag.MensajeError != null)
                    {
                        <div class="row clearfix">
                            <div id="divMensajeError" class="container">
                                <div class="alert alert-danger">
                                    <div class="alert-icon">
                                        <i class="zmdi zmdi-block"></i>
                                    </div>
                                    <strong>
                                        <label>@ViewBag.MensajeError</label>
                                    </strong>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </section>
    }
</body>
</html>
