@Html.DevExpress().ComboBox(settings =>
{
    settings.Name = "IdCliente";
    settings.CallbackRouteValues = new { Controller = "Pedidos", Action = "_DatosCliente" };
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.Properties.DropDownWidth = 650;
    settings.Properties.DropDownStyle = DropDownStyle.DropDownList;
    settings.Properties.CallbackPageSize = 30;
    settings.Properties.TextFormatString = "{0} {1}";
    settings.Properties.ValueField = "IdCliente";
    settings.Properties.ValueType = typeof(int);
    if (TempData["ListaCliente"] != null)
    {
        settings.SelectedIndex = 0;
    }
    settings.Properties.ClientSideEvents.SelectedIndexChanged = "function(s, e) { Orden.PerformCallback(); }";
    settings.Properties.Columns.Add(column =>
    {
        column.Caption = "Nombre";
        column.FieldName = "Nombre";
        settings.Properties.ItemStyle.Wrap = DefaultBoolean.True;
        column.Width = 130;

    });
    settings.Properties.Columns.Add("Apellido1", "Apellido", 130);
    settings.Properties.Columns.Add("Rfc", "RFC", 230);
    settings.Properties.Columns.Add("Telefono", "Telefono", 100);
}).BindList(TempData["ListaCliente"]).GetHtml()


