@model  MVC.Presentacion.Models.Pedidos.PedidoModel
<!DOCTYPE html>

<html>
<head>
    <script src="~/assets/plugins/bootstrap-notify/bootstrap-notify.js"></script>
    <script src="~/assets/js/pages/ui/notifications.js"></script>

    <script type="text/javascript">
        var mensaje = '@ViewBag.Msj';
        if (mensaje != '') {
            $(window).on("load", showNotification('alert-success', mensaje, 'top', 'center', '', ''));
        }

    </script>
</head>
<body style="height:100%">
    @using (Html.BeginForm("EditarPedido", "Pedidos", FormMethod.Post))
    {
        <section class="content home">
            <div class="container-fluid">
                <div class="block-header">
                    <div class="row clearfix">
                        <div class="col-lg-5 col-md-5 col-sm-12">
                            <h2>Call Center</h2>
                            <ul class="breadcrumb padding-0">
                                <li class="breadcrumb-item"><a href="@Url.Action("Inicio", "Home")"><i class="zmdi zmdi-home"></i></a></li>
                                <li class="breadcrumb-item">Pedido</li>
                                <li class="breadcrumb-item">Revisión</li>
                            </ul>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="card">
                                <div class="header">
                                    <h2>Datos del <strong>Pedido</strong></h2>
                                </div>
                                <div class="body">
                                    <div class="row clearfix">
                                        <div class="col-sm-12">
                                            <div class="row clearfix">
                                                <div class="col-sm-1">
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            <strong>Pedido: </strong>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-2">
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            @Model.IdPedido
                                                            <input type="hidden" name="IdPedido" value="@Model.IdPedido" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-1">
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            <strong>Estatus: </strong>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-2">
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            @Model.EstatusPedido
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-1">
                                                </div>
                                                <div class="col-sm-2">
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            <strong>Fecha y hora de entrega: </strong> 
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-2">
                                                    <div class="form-group">
                                                        <div class="input-group"> @Model.FechaEntregaPedido
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row clearfix">
                                                <div class="col-sm-1">
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            <strong>Cliente: </strong>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-4">
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            @Model.NombreRfc - @Model.cliente.Rfc
                                                            <input type="hidden" name="NombreRfc" value="@Model.NombreRfc" />
                                                            <input type="hidden" name="IdCliente" value="@Model.cliente.IdCliente" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-2">
                                                </div>
                                                <div class="col-sm-2">
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            <strong>Fecha y hora solicitud: </strong>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-2">
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            @Model.FechaRegistroPedido
                                                        </div>
                                                    </div>
                                                </div>                                               
                                            </div>
                                            @if (Model.IdPipa > 0)
                                            {
                                                <div class="row clearfix">
                                                    <div class="col-sm-1">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                <strong>Calle: </strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                @Model.Calle
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                    </div>
                                                    <div class="col-sm-1">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                <strong>Unidad: </strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                @Model.Unidad
                                                            </div>
                                                        </div>
                                                    </div>        
                                                </div>
                                                <div class="row clearfix">
                                                    <div class="col-sm-1">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                <strong>Colonia: </strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                @Model.Colonia
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                    </div>
                                                    <div class="col-sm-1">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                <strong>Cantidad: </strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                @Model.Cantidad
                                                            </div>
                                                        </div>
                                                    </div>                                               
                                                </div>
                                                <div class="row clearfix">
                                                    <div class="col-sm-1">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                <strong>Teléfono: </strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                @Model.cliente.Telefono1
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row clearfix">
                                                    <div class="col-sm-3">
                                                        @*<b>Referencia:</b>
                                                            @Html.LabelFor(model => model.ReferenciaUbicacion, new { @class = "form-control" })*@
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                <strong>Referencia: </strong> @Model.ReferenciaUbicacion
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row clearfix">
                                                    <div class="col-sm-4">
                                                        <div class="form-group">
                                                            <input type="submit" value="Editar datos del cliente" formaction=@Url.Action("AltaClienteDireccion") formmethod="post" class="btn btn-raised btn-primary btn-round float-left" />
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                    </div>
                                                    <div class="col-sm-4">
                                                        <div class="form-group">
                                                            <input type="submit" value="Modificar pedido" formaction=@Url.Action("EditarPedido") formmethod="post" class="btn btn-raised btn-primary btn-round float-right" />
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            @if (Model.IdCamioneta > 0)
                                            {
                                                <div class="row clearfix">
                                                    <div class="col-sm-1">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                <strong>Calle: </strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                @Model.Calle
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                    </div>
                                                    <div class="col-sm-1">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                <strong>Unidad: </strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                @Model.Unidad
                                                            </div>
                                                        </div>
                                                    </div>                                                 
                                                </div>
                                                <div class="row clearfix">
                                                    <div class="col-sm-1">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                <strong>Colonia: </strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                @Model.Colonia
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                    </div>
                                                    <div class="col-sm-3" style="max-width: 13.666667%;">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                <strong>Cantidad 45 Kg:</strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-1">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                @Model.Cantidad45
                                                            </div>
                                                        </div>
                                                    </div>                                                  
                                                </div>
                                                <div class="row clearfix">
                                                    <div class="col-sm-1">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                <strong>Teléfono: </strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                @Model.cliente.Telefono1
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                    </div>
                                                    <div class="col-sm-3" style="max-width: 13.666667%;">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                <strong>Cantidad 30 Kg: </strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                @Model.Cantidad30
                                                        </div>
                                                    </div>
                                                </div>                                                    
                                                </div>
                                                <div class="row clearfix">
                                                    <div class="col-sm-3">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                <strong>Referencia: </strong> @Model.ReferenciaUbicacion
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                    </div>                                               
                                                    <div class="col-sm-3" style="max-width: 13.666667%;">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                <strong>Cantidad 20 Kg: </strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                @Model.Cantidad20
                                                        </div>
                                                    </div>
                                                </div>
                                                </div>
                                                <div class="row clearfix">
                                                    <div class="col-sm-4">
                                                        <div class="form-group">
                                                            <input type="submit" value="Editar datos del cliente" formaction=@Url.Action("AltaClienteDireccion") formmethod="post" class="btn btn-raised btn-primary btn-round float-left" />
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                    </div>
                                                    <div class="col-sm-4">
                                                        <div class="form-group">
                                                            <input type="submit" value="Modificar pedido" formaction=@Url.Action("EditarPedido") formmethod="post" class="btn btn-raised btn-primary btn-round float-right" />
                                                        </div>
                                                    </div>
                                                </div>
                                            }

                                            <hr />
                                            <div class="row clearfix">
                                                <div class="col-sm-4">
                                                    <div class="form-group">
                                                        <input type="submit" value="Regresar" formaction=@Url.Action("Buscar") formmethod="post" class="btn btn-raised btn-primary btn-round float-left" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
</body>

</html>
