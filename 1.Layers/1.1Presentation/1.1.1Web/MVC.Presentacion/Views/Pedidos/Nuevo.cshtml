<!DOCTYPE html>

<html>
<head>
    <script src="~/Resources/js/Pedidos.js"></script>
</head>
<body style="height:100%">
    @using (Html.BeginForm("Nuevo", "Pedidos", FormMethod.Post))
    {
        <section class="content home">
            <div class="container-fluid">
                <div class="block-header">
                    <div class="row clearfix">
                        <div class="col-lg-5 col-md-5 col-sm-12">
                            <h2>Call Center</h2>
                            <ul class="breadcrumb padding-0">
                                <li class="breadcrumb-item"><a href="@Url.Action("Inicio", "Home")"><i class="zmdi zmdi-home"></i></a></li>
                                <li class="breadcrumb-item">Call Center</li>
                                <li class="breadcrumb-item">Pedidos</li>
                                <li class="breadcrumb-item">Nuevo</li>
                            </ul>
                        </div>
                    </div>
                    @Html.HiddenFor(m => m.IdEmpresa)
                    @Html.HiddenFor(m => m.IdTipoPersona)
                    @Html.HiddenFor(m => m.IdRegimenFiscal)
                    @Html.HiddenFor(m => m.limiteCreditoMonto)
                    @Html.HiddenFor(m => m.limiteCreditoDias)
                    @Html.HiddenFor(m => m.IdRegimenFiscal)
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="card">
                                <div class="header">
                                    <h2>Localizar <strong>Cliente</strong></h2>
                                </div>
                                <div class="body">
                                    <div class="row clearfix">
                                        <div class="col-sm-12">
                                            <div class="row clearfix">
                                                <div class="col-sm-3">
                                                    <b>Teléfono del cliente:</b>
                                                    @Html.TextBoxFor(m => m.Telefono1, new { @class = "form-control", @id = "txtTel1", placeholder = "Teléfono del cliente" })
                                                </div>
                                                <div class="col-sm-3">
                                                    <b>Teléfono del cliente:</b>
                                                    @Html.TextBoxFor(m => m.Celular1, new { @class = "form-control", @id = "txtTel2", placeholder = "Teléfono del cliente" })
                                                </div>
                                                <div class="col-sm-3">
                                                    <b>RFC:</b>
                                                    @Html.TextBoxFor(m => m.Rfc, new { @class = "form-control", @id = "txtRfc", placeholder = "RFC del cliente" })
                                                </div>
                                                <div class="col-sm-3" style="top: 10px;">
                                                    <div class="form-group">
                                                        <input type="submit" id="btnBuscarC" formaction=@Url.Action("BuscarClientesPedido") formmethod="post" value="Buscar" class="btn btn-raised btn-primary btn-round float-left" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="card">
                                <div class="header">
                                    <h2>Datos del <strong>Pedido</strong></h2>
                                </div>
                                <div class="body">
                                    <div class="row clearfix">
                                        <div class="col-sm-12">
                                            <div class="row clearfix">
                                                <div class="col-sm-3">
                                                    <b>Cliente:</b>
                                                    @Html.Action("_DatosCliente", Model.clientes)
