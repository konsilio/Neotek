@model  MVC.Presentacion.Models.Pedidos.PedidoModel

<!DOCTYPE html>

<html>
<head>
    <script src="~/Resources/js/lib/jquery-1.9.1.js"></script> 
    <script type="text/javascript">      
        $(document).ready(function () {        
            $('select').on('change', function () {

                var value = $('#TipoUnidad').find('option:selected').val();//get value to filter of selected
              
                if (value == 1)//Pipa
                {
                    $('.selPipa').show();
                    $('.selCamioneta').hide();
                }
                if (value == 2)//Camioneta
                {
                    $('.selPipa').hide();
                    $('.selCamioneta').show();                  
                }
            });
        });
    </script>
</head>
<body style="height:100%">
    @using (Html.BeginForm("Nuevo", "Pedidos", FormMethod.Post))
    {
        <section class="content home">
            <div class="container-fluid">
                <div class="block-header">
                    <div class="row clearfix">
                        <div class="col-lg-5 col-md-5 col-sm-12">
                            <h2>Call Center</h2>
                            <ul class="breadcrumb padding-0">
                                <li class="breadcrumb-item"><a href="@Url.Action("Inicio", "Home")"><i class="zmdi zmdi-home"></i></a></li>
                                <li class="breadcrumb-item">Call Center</li>
                                <li class="breadcrumb-item">Pedidos</li>
                                <li class="breadcrumb-item">Nuevo</li>
                            </ul>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="card">
                                <div class="header">
                                    <h2>Localizar <strong>Cliente</strong></h2>
                                </div>
                                <div class="body">
                                    <div class="row clearfix">
                                        <div class="col-sm-12">
                                            <div class="row clearfix">
                                                <div class="col-sm-3">
                                                    <b>Teléfono del cliente:</b>
                                                    @Html.TextBoxFor(m => m.Telefono1, new { @class = "form-control", placeholder = "Teléfono del cliente" })
                                                </div>
                                                <div class="col-sm-3">
                                                    <b>Teléfono del cliente:</b>
                                                    @Html.TextBoxFor(m => m.Celular1, new { @class = "form-control", placeholder = "Teléfono del cliente" })
                                                </div>
                                                <div class="col-sm-3">
                                                    <b>RFC:</b>
                                                    @Html.TextBoxFor(m => m.Rfc, new { @class = "form-control", placeholder = "RFC del cliente" })
                                                </div>
                                                <div class="col-sm-3" style="top: 10px;">
                                                    <div class="form-group">
                                                        <input type="submit" name="Buscar" value="Buscar" formaction=@Url.Action("BuscarClientesPedido") formmethod="post" class="btn btn-raised btn-primary btn-round float-left" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="card">
                                <div class="header">
                                    <h2>Datos del <strong>Pedido</strong></h2>
                                </div>
                                <div class="body">
                                    <div class="row clearfix">
                                        <div class="col-sm-12">
                                            <div class="row clearfix">
                                                <div class="col-sm-3">
                                                    <b>Cliente:</b>
                                                    <select name="IdCliente" class="form-control show-tick">
                                                        <option value="0">Seleccione</option>
                                                        @if (Model != null)
                                                        {
                                                            foreach (var lst in Model.Pedidos)
                                                            {
                                                                <option value="@lst.IdCliente">@lst.Nombre @lst.Apellido1 - @lst.Rfc</option>
                                                            }
                                                        }
                                                    </select>
                                                </div>
                                                <div class="col-sm-2" style="top: 10px;">
                                                    <div class="form-group">
                                                        <input type="submit" name="Crear cliente" value="Crear cliente" formaction=@Url.Action("AltaCliente") formmethod="post" class="btn btn-raised btn-primary btn-round float-right" disabled />
                                                    </div>
                                                </div>
                                                <div class="col-sm-2">
                                                </div>
                                                <div class="col-sm-3">
                                                    <b>Fecha:</b>
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <i class="zmdi zmdi-calendar"></i>
                                                        </span>
                                                        <input type="text" id="" class="form-control date" placeholder="formato: dd/mm/aaaa" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row clearfix">
                                                <div class="col-sm-3">
                                                    <b>Domicilio:</b>
                                                    <select name="Domicilio" class="form-control show-tick">
                                                        <option value="0">Seleccione</option>
                                                        @if (Model != null)
                                                        {
                                                            foreach (var lst in Model.Pedidos)
                                                            {
                                                                <option value="@lst.IdCliente">@lst.Domicilio</option>
                                                            }
                                                        }
                                                    </select>
                                                </div><div class="col-sm-4">
                                                </div>
                                                <div class="col-sm-2">
                                                    <b>Hora:</b>
                                                    <div class="input-group">
                                                        <input name="Hora" type="number" class="form-control" />
                                                    </div>
                                                </div>
                                                @*<div style="-webkit-box-flex: 0;-ms-flex: 0 0 16.666667%;flex: 0 0 16.666667%; max-width: 2.666667%;text-align: center;"><b>:</b></div>*@
                                                <div class="col-sm-2" style="top: 20px;">
                                                    <div class="input-group">
                                                        <input name="Minutos" type="number" class="form-control" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row clearfix">
                                                <div class="col-sm-3">
                                                    <b>Tipo unidad:</b>
                                                    <select id="TipoUnidad" class="form-control show-tick">
                                                        <option value="0">Seleccione</option>
                                                        <option value="1">Pipa</option>
                                                        <option value="2">Camioneta</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="row clearfix selPipa">
                                                <div class="col-sm-3">
                                                    <b>Unidad:</b>
                                                    <select id="IdPipa" class="form-control show-tick">
                                                        <option value="0">Seleccione</option>
                                                        @if (ViewBag.Pipas != null)
                                                        {
                                                            foreach (var lst in ViewBag.Pipas)
                                                            {
                                                                <option value="@lst.IdPipa">@lst.Nombre</option>
                                                            }
                                                        }
                                                    </select>
                                                </div>
                                                <div class="col-sm-4">
                                                    <b>Estatus pedido:</b>
                                                    <select name="IdCliente" class="form-control show-tick">
                                                        <option value="0">Seleccione</option>
                                                        @if (ViewBag.Estatus != null)
                                                        {
                                                            foreach (var lst in ViewBag.Estatus)
                                                            {
                                                                <option value="@lst.IdEstatusPedido">@lst.EstatusPedido</option>
                                                            }
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="row clearfix selPipa">
                                                <div class="col-sm-3">
                                                    <b>Cantidad:</b>
                                                    <input name="Cantidad" type="number" class="form-control" />
                                                </div>
                                                <div class="col-sm-1" style="top: 22px;">
                                                    <div class="form-group">
                                                        kg.
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row clearfix selCamioneta">
                                                <div class="col-sm-3">
                                                    <b>Unidad:</b>
                                                    <select id="IdCamioneta" class="form-control show-tick">
                                                        <option value="0">Seleccione</option>
                                                        @if (ViewBag.Camionetas != null)
                                                        {
                                                            foreach (var lst in ViewBag.Camionetas)
                                                            {
                                                                <option value="@lst.IdCamioneta">@lst.Nombre</option>
                                                            }
                                                        }
                                                    </select>
                                                </div>
                                                <div class="col-sm-4">
                                                    <b>Estatus pedido:</b>
                                                    <select name="IdCliente" class="form-control show-tick">
                                                        <option value="0">Seleccione</option>
                                                        @if (ViewBag.Estatus != null)
                                                        {
                                                            foreach (var lst in ViewBag.Estatus)
                                                            {
                                                                <option value="@lst.IdEstatusPedido">@lst.EstatusPedido</option>
                                                            }
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="row clearfix selCamioneta">
                                                <div class="col-sm-3">
                                                    <b>Cantidad:</b>
                                                    <input name="Cantidad45" type="number" class="form-control" />
                                                </div>
                                                <div class="col-sm-2" style="top: 22px;">
                                                    <div class="form-group">
                                                       Cilindro(s) de 45 kg.
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row clearfix selCamioneta">
                                                <div class="col-sm-3">
                                                    <b>Cantidad:</b>
                                                    <input name="Cantidad30" type="number" class="form-control" />
                                                </div>
                                                <div class="col-sm-2" style="top: 22px;">
                                                    <div class="form-group">
                                                        Cilindro(s) de 30 kg.
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row clearfix selCamioneta">
                                                <div class="col-sm-3">
                                                    <b>Cantidad:</b>
                                                    <input name="Cantidad20" type="number" class="form-control" />
                                                </div>
                                                <div class="col-sm-2" style="top: 22px;">
                                                    <div class="form-group">
                                                        Cilindro(s) de 20 kg.
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div><br />
                                    <div class="row clearfix">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <input type="submit" value="Cancelar" formaction=@Url.Action("Index") formmethod="post" class="btn btn-raised btn-primary btn-round float-left" />
                                            </div>

                                            <div class="form-group">
                                                <input type="submit" value="Crear pedido" formaction=@Url.Action("CrearPedido") formmethod="post" class="btn btn-raised btn-primary btn-round float-right" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                   
                    @if (ViewBag.MensajeError != null)
                    {
                        <div class="row clearfix">
                            <div id="divMensajeError" class="container">
                                <div class="alert alert-danger">
                                    <div class="alert-icon">
                                        <i class="zmdi zmdi-block"></i>
                                    </div>
                                    <strong>
                                        <label>@ViewBag.MensajeError</label>
                                    </strong>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </section>
    }
</body>
</html>
