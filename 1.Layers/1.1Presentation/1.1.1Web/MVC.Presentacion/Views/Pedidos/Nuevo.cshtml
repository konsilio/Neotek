                                                                {
                                                                    <option value="@lst.IdPipa">@lst.Nombre</option>
                                                                }
                                                            }
                                                        </select>*@
                                                    @Html.Action("_Pipas")
                                                </div>
                                            </div>
                                            <div class="row clearfix selPipa" style="display:none">
                                                <div class="col-sm-3">
                                                    <b>Cantidad:</b>
                                                    <input name="Cantidad" type="number" class="form-control" />
                                                </div>
                                                <div class="col-sm-1" style="top: 22px;">
