@model  MVC.Presentacion.Models.Catalogos.PrecioVentaModel

<!DOCTYPE html>

<html>
<head>
    @{
        ViewBag.Title = "Index";
    }
    <script src="~/Resources/js/PrecioVenta.js"></script>
   
</head>
<body style="height:100%">
    @using (Html.BeginForm("ActualizarPrecioVentaOtro", "PrecioVentaOtro", FormMethod.Post))
    {
        <section class="content home">
            <div class="container-fluid">
                <div class="block-header">

                    <div class="card">
                        <div class="header">
                            <h2><strong>Registrar precio de salida</strong></h2>
                        </div>
                        <div class="body">
                            <div class="row clearfix">
                                <div class="col-lg-4 col-md-4 col-sm-4">
                                    <div class="form-group">
                                        Precio Actual:
                                        <input name="PrecioActual" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-4">
                                    <div class="form-group">
                                        Precio Salida:
                                        <input name="PrecioSalida" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-4">
                                    <div class="form-group">
                                        Fecha programada:
                                        <div class="input-group">
                                            @Html.EditorFor(m => m.FechaProgramada, new { htmlAttributes = new { @class = "datepicker" } })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-12">
                                    <input type="submit" id="btnRegistraPrecio" value="Registrar Precio" formmethod="post" class="btn btn-raised btn-primary float-right" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="body">
                        <div class="row clearfix">
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <div class="form-group">
                                    <input type="submit" value="Regresar" id="btnRegresarIndexPVO" formaction=@Url.Action("Index") class="btn btn-raised btn-primary float-left" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
</body>
</html>