@Html.DevExpress().ComboBox(settings =>
{
    settings.Name = "IdPuntoVenta";
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.SelectedIndex = (int)ViewData["IdPuntoVenta"];
    settings.Properties.DropDownWidth = 550;
    settings.Properties.DropDownStyle = DropDownStyle.DropDownList;
    settings.CallbackRouteValues = new { Controller = "Remanente", Action = "cbPuntosventaPartial" };
    settings.Properties.CallbackPageSize = 30;
    settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.StartsWith;
    settings.Properties.TextFormatString = "{1}";
    settings.Properties.ValueField = "IdPuntoVenta";
    settings.Properties.ValueType = typeof(int);
    settings.Properties.Columns.Add("UnidadesAlmacen", "Tipo", System.Web.UI.WebControls.Unit.Percentage(100));
