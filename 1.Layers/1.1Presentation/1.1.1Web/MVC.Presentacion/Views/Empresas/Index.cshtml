                    </div>
                </div>
                <div class="card">                
                    <div class="body">
                        <div class="row clearfix">
                            <div class="col-lg-12 col-md-12 col-sm-12">                              
                                    <div class="table-responsive">
                                        @*<table class="table table-bordered" id="editableTable">*@
                                            <table class="table table table-bordered table-striped table-hover js-basic-example dataTable" name="EmpresasGaseras">
                                                <thead>
                                                    <tr>
                                                        <th>Logo</th>
                                                        <th>Razón social</th>
                                                        <th>RFC</th>
                                                        <th>Contacto</th>
                                                        <th>Celular</th>
                                                        <th>Telefono</th>
                                                        <th>Correo</th>
                                                        <th>Acciones</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in @ViewBag.listaEmpresas)
                                                    {
                                                        <tr>
                                                            <th>@item.UrlLogotipoLogin</th>
                                                            <td>@item.RazonSocial</td>
                                                            <td>@item.Rfc</td>
                                                            <td>@item.Persona1</td>
                                                            <td>@item.Celular1</td>
                                                            <td>@item.Telefono1</td>
                                                            <td>@item.Email1</td>
                                                            <td>
                                                                @*<a data-value="@item.IdEmpresa"
                                                                   href="javascript:void(0)" class="btnEdit">
                                                                    <i class="material-icons">edit</i>
                                                                    <span class="icon-name"></span>
                                                                </a>
                                                                <% @Html.ActionLink("Edit", "ActualizaParametros", new { id=item.Id }) %> |
                                                                <a data-value="@item.IdEmpresa"
                                                                   href="javascript:void(0)" class="btnEdit">
                                                                    <i class="material-icons">delete</i>
                                                                    <span class="icon-name"></span>
                                                                </a>*@
                                                                <a ID="lbEdit" href="@Url.Action("ActualizaParametros", "Empresas", new { id = item.IdEmpresa })">
                                                                    <i class="material-icons">edit</i>
                                                                    <span class="icon-name"></span>
                                                                </a>
                                                                <a ID="lbBorrar" href="@Url.Action("Borrar", "Empresa", new {  id=item.IdEmpresa } )">
                                                                    <i class="material-icons">delete</i>
                                                                    <span class="icon-name"></span>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                    </div>                      
                             </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
