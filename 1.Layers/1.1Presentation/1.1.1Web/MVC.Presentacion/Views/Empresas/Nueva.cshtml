@using MVC.Presentacion.Models.Catalogos
@model  EmpresaModel
@{
    ViewBag.Title = "Nueva";
}
<link rel="stylesheet" href="~/assets/plugins/jquery-datatable/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="~/assets/plugins/bootstrap-select/css/bootstrap-select.css" />
<script src="~/Resources/js/Empresas.js"></script>
<script src="~/Resources/js/lib/jquery-1.9.1.js"></script>
@using (Html.BeginForm((ViewBag.Empresas == null) ? "Crear" : "GuardaEdicionEmpresa", "Empresas", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <section class="content home">
        <div class="container-fluid">
            <div class="block-header">

                <div class="row clearfix">
                    <div class="col-lg-5 col-md-5 col-sm-12">
                        <h2>Gaseras</h2>
                        <ul class="breadcrumb padding-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("Inicio", "Home")"><i class="zmdi zmdi-home"></i></a></li>
                            <li class="breadcrumb-item">Catálogo</li>
                            <li class="breadcrumb-item">Gasera</li>
                            @if (ViewBag.Empresas == null)
                            {
                                <li class="breadcrumb-item">Nueva</li>
                            }
                            else
                            {
                                <li class="breadcrumb-item">Edición</li>
                            }
                           
                        </ul>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="card">
                            <div class="header">
                                <h2>Información <strong>General</strong></h2>
                            </div>
                            <div class="body">
                                <div class="row clearfix">
                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <div>
                                                    <label for="txtNomC">
                                                        Nombre Comercial:*
                                                    </label>
                                                    <input id="NombreComercial" type="text" name="NombreComercial" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].NombreComercial)" />
                                                    <input id="IdEmpresa" type="text" name="IdEmpresa" hidden="hidden" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].IdEmpresa)" />
                                                    @Html.ValidationMessageFor(m => m.NombreComercial, "", new { @class = "alert-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="card">
                            <div class="header">
                                <h2>Datos <strong>Fiscales</strong></h2>
                            </div>
                            <div class="body">
                                <div class="row clearfix">
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                        <div class="form-group">
                                            <div>
                                                <label for="txtRazonS">
                                                    Razón Social:*
                                                </label>
                                                <input type="text" name="RazonSocial" id="txtRazonS" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].RazonSocial)" />
                                                @Html.ValidationMessageFor(m => m.RazonSocial, "", new { @class = "alert-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4">
                                        <div class="form-group">
                                            <label for="txtRfc">
                                                RFC:*
                                            </label>
                                            <input type="text" name="Rfc" id="txtRfc" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].Rfc)" />
                                            @Html.ValidationMessageFor(m => m.Rfc, "", new { @class = "alert-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="card">
                            <div class="header">
                                <h2>Datos de <strong>Contacto</strong></h2>
                            </div>
                            <div class="body">
                                <div class="row clearfix">
                                    <div class="col-lg-4 col-md-4 col-sm-4">
                                        <div class="form-group">
                                            Persona de contacto 1: <input id="txtPersona1" name="Persona1" type="text" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].Persona1)" />
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4">
                                        <div class="form-group">
                                            <div>
                                                Teléfono 1: <input id="txtTel1" name="Telefono1" type="text" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].Telefono1)" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4">
                                        <div class="form-group">
                                            <div>
                                                Celular 1:
                                                <input id="txtCel1" type="text" name="Celular1" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].Celular1)" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-lg-4 col-md-4 col-sm-4">
                                        <div class="form-group">
                                            Persona de contacto 2:
                                            <input id="txtPersona2" name="Persona2" type="text" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].Persona2)" />
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4">
                                        <div class="form-group">
                                            <div>
                                                Teléfono 2:
                                                <input id="txtTel2" name="Telefono2" type="text" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].Telefono2)" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4">
                                        <div class="form-group">
                                            <div>
                                                Celular 2:
                                                <input id="txtCel2" name="Celular2" type="text" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].Celular2)" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-lg-4 col-md-4 col-sm-4">
                                        <div class="form-group ">
                                            Persona de contacto 3:
                                            <input id="txtPersona3" name="Persona3" type="text" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].Persona3)" />
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4">
                                        <div class="form-group">
                                            <div>
                                                Teléfono 3:
                                                <input id="txtTel3" name="Telefono3" type="text" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].Telefono3)" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4">
                                        <div class="form-group">
                                            <div>
                                                Celular 3:
                                                <input id="txtCel3" type="text" name="Celular3" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].Celular3)" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                        <div class="form-group">
                                            E-mail 1:
                                            <input id="txtmail1" name="Email1" type="text" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].Email1)" />
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                        <div class="form-group">
                                            <div>
                                                Sitio web 1:
                                                <input id="txtweb1" name="SitioWeb1" type="text" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].SitioWeb1)" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                        <div class="form-group">
                                            E-mail 2:
                                            <input id="txtmail2" name="Email2" type="text" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].Email2)" />
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                        <div class="form-group">
                                            <div>
                                                Sitio web 2:
                                                <input id="txtweb2" name="SitioWeb2" type="text" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].SitioWeb2)" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                        <div class="form-group">
                                            E-mail 3:
                                            <input id="txtmail3" name="Email3" type="text" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].Email3)" />
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                        <div class="form-group">
                                            <div>
                                                Sitio web 3:
                                                <input id="txtweb3" name="SitioWeb3" type="text" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].SitioWeb3)" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="card">
                            <div class="header">
                                <h2><strong>Dirección</strong></h2>
                            </div>
                            <div class="body">
                                <div class="row clearfix">
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                        <div class="form-group">
                                            <label for="ddlPais">
                                                País:*
                                            </label>
                                            <select id="ddlPais" name="IdPais" class="form-control selectpicker z-index show-tick">
                                                @foreach (var lst in ViewBag.ListaPaises)
                                                {
                                                    <option value="@lst.IdPais">@lst.Pais</option>
                                                }
                                            </select>
                                            @Html.ValidationMessageFor(m => m.IdPais, "", new { @class = "alert-danger" })
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                        <div class="form-group">
                                            <label for="ddlEdo">
                                                Estado:*
                                            </label><input type="text" name="EstadoProvincia" style="display:none" id="txtEdoP" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].EstadoProvincia)" />
                                            <select name="IdEstadoRep" id="ddlEdo" class="form-control selectpicker z-index show-tick" data-live-search="true">
                                                @foreach (var lst in ViewBag.ListaEstados)
                                                {
                                                    <option value="@lst.IdEstadoRep">@lst.Estado</option>
                                                }
                                            </select>
                                            @Html.ValidationMessageFor(m => m.IdEstadoRep, "", new { @class = "alert-danger" })
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                        <div class="form-group">
                                            <label for="txtMun">
                                                Municipio:*
                                            </label>
                                            <input type="text" name="Municipio" id="txtMun" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].Municipio)" />
                                            @Html.ValidationMessageFor(m => m.Municipio, "", new { @class = "alert-danger" })
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                        <div class="form-group">
                                            <label for="txtCP">
                                                C.P.:*
                                            </label>
                                            <input type="text" name="CodigoPostal" id="txtCP" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].CodigoPostal)" />
                                            @Html.ValidationMessageFor(m => m.CodigoPostal, "", new { @class = "alert-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                        <div class="form-group">
                                            <div>
                                                <label for="txtCol">
                                                    Colonia:*
                                                </label>
                                                <input type="text" name="Colonia" id="txtCol" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].Colonia)" />
                                                @Html.ValidationMessageFor(m => m.Colonia, "", new { @class = "alert-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4">
                                        <div class="form-group">
                                            <label for="txtCalle">
                                                Calle:*
                                            </label>
                                            <input type="text" name="Calle" id="txtCalle" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].Calle)" />
                                            @Html.ValidationMessageFor(m => m.Calle, "", new { @class = "alert-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-lg-2 col-md-2 col-sm-2">
                                        <div class="form-group">
                                            <div>
                                                <label for="txtNume">
                                                    Núm. Ext.:*
                                                </label>
                                                <input type="text" name="NumExt" id="txtNume" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].NumExt)" />
                                                @Html.ValidationMessageFor(m => m.NumExt, "", new { @class = "alert-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-md-2 col-sm-2">
                                        <div class="form-group">
                                            <label for="txtNumI">
                                                Núm. Int.:
                                            </label>
                                            <input type="text" name="NumInt" id="txtNumI" class="form-control" value="@((ViewBag.Empresas==null)?"":ViewBag.Empresas[0].NumInt)" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="card">
                            <div class="header">
                                <h2><strong>Logotipos</strong></h2>
                            </div>
                            <div class="body">
                                <div class="row clearfix">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            Pequeño (180px X 180px)
                                            <input type="file" name="UrlLogotipo180px" id="file" accept="image/gif, image/jpeg , image/jpg" class="form-control-file" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            Mediano (500px X 500px)
                                            <input id="txtMed" type="file" name="UrlLogotipo500px" accept="image/gif, image/jpeg , image/jpg" class="form-control-file" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            Grande (1000px X 1000px)
                                            <input id="txtGra" type="file" name="UrlLogotipo1000px" class="form-control-file" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="body">
                    <div class="row clearfix">
                        <div class="col-lg-5 col-md-5 col-sm-5">
                            <div class="form-group">
                                <input type="submit" value="Regresar" id="RegresaIndexNE" formaction=@Url.Action("Index") formmethod="post" class="btn btn-raised btn-primary btn-round float-left" />
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                @if (@ViewBag.Empresas == null)
                                {
                                    <input type="submit" value="Crear" formaction="Crear" formmethod="post" class="btn btn-raised btn-primary btn-round float-right" />
                                }
                                else
                                {
                                    <input type="submit" value="Actualizar" formmethod="post" class="btn btn-raised btn-primary btn-round float-right" />
                                }
                            </div>
                        </div>
                    </div>
                </div>
                @if (ViewBag.MessageError != null)
                {
                    <div class="row clearfix">
                        <div id="divMensajeError" class="container">
                            <div class="alert alert-danger">
                                <div class="alert-icon">
                                    <i class="zmdi zmdi-block"></i>
                                </div>
                                <strong>
                                    <label>@ViewBag.MessageError</label>
                                </strong>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}