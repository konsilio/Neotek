                                <div class="row clearfix">
                                    <div class="col-lg-1 col-md-1 col-sm-1">
                                        <div class="form-group">
                                            <div>
                                                <label for="txtNume">
                                                    Colonia:*
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                        <div class="form-group">
                                            <input type="text" name="Colonia" class="form-control" value="@ViewBag.Locaciones.Colonia"/>
                                        </div>
                                    </div>
                                    <div class="col-lg-1 col-md-1 col-sm-1">
                                        <div class="form-group">
                                            <div>
                                                <label for="txtNume">
                                                    Calle:*
